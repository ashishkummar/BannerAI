{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",  // Output folder for compiled JS files
    "rootDir": "./",     // Set current directory as root directory for TypeScript files
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts"  // Include all TypeScript files in the project directory (backend in this case)
  ],
  "exclude": [
    "node_modules"
  ]
}
